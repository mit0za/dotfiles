# conky
# killall conky &
# conky -c ~/.config/conky/Gotham/Gotham.conf &
# conky -c ~/.config/conky/Gotham/Gotham2.conf &

# Sevices info :
echo "false" >/tmp/blue_light_state

# Compositor  :
autostart="picom"
for program in $autostart; do
	pidof -s "$program" || setsid -f "$program"
done >/dev/null 2>&1

